@model MyApp.Models.Item
@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-center my-4">Edit an Item</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" placeholder="Enter item name" />
                        </div>
                        <div class="mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <input type="number" id="Price" name="Price" value="@Model.Price" class="form-control" placeholder="Enter item price" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a href="@Url.Action("Index", "Items")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
